{% doc %}
  @prompt
    Create an image animation block with automatic zoom and rotation effects for hero sections. The animation should smoothly zoom in and rotate images continuously in a loop, creating a dynamic futuristic feel. Include controls to adjust animation speed, zoom intensity, and rotation degrees. The effect should be subtle and premium-looking, suitable for a modern dropshipping storefront.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-animated-image-{{ ai_gen_id }} {
    display: block;
    position: relative;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-animated-image__wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.aspect_ratio }}%;
    overflow: hidden;
  }

  .ai-animated-image__content-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    animation: ai-zoom-rotate-{{ ai_gen_id }} {{ block.settings.animation_duration }}s ease-in-out infinite alternate;
  }

  .ai-animated-image__img-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-animated-image__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-animated-image__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
  }

  .ai-animated-image__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @keyframes ai-zoom-rotate-{{ ai_gen_id }} {
    0% {
      transform: scale(1) rotate(0deg);
    }
    100% {
      transform: scale({{ block.settings.zoom_intensity }}) rotate({{ block.settings.rotation_degrees }}deg);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-animated-image-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<div class="ai-animated-image-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-animated-image__wrapper-{{ ai_gen_id }}">
    <div class="ai-animated-image__content-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 2000 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="ai-animated-image__img-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-animated-image__placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
          <div class="ai-animated-image__empty-state-{{ ai_gen_id }}">
            Add an image to see the animation effect
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

