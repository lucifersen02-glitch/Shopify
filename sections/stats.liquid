{% schema %}
{
  "name": "Statistics Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Choose Us"
    },
    {
      "type": "text",
      "id": "stat_1_number",
      "label": "Statistic 1 Number",
      "default": "10K+"
    },
    {
      "type": "text",
      "id": "stat_1_label",
      "label": "Statistic 1 Label",
      "default": "Happy Customers"
    },
    {
      "type": "text",
      "id": "stat_2_number",
      "label": "Statistic 2 Number",
      "default": "500+"
    },
    {
      "type": "text",
      "id": "stat_2_label",
      "label": "Statistic 2 Label",
      "default": "Products"
    },
    {
      "type": "text",
      "id": "stat_3_number",
      "label": "Statistic 3 Number",
      "default": "50+"
    },
    {
      "type": "text",
      "id": "stat_3_label",
      "label": "Statistic 3 Label",
      "default": "Countries"
    },
    {
      "type": "text",
      "id": "stat_4_number",
      "label": "Statistic 4 Number",
      "default": "24/7"
    },
    {
      "type": "text",
      "id": "stat_4_label",
      "label": "Statistic 4 Label",
      "default": "Support"
    }
  ],
  "presets": [
    {
      "name": "Statistics Section"
    }
  ]
}
{% endschema %}

<section class="stats-section">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="stats-section__heading">{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="stats-grid">
      <div class="stat-card" data-animate="fade-up">
        <div class="stat-card__icon">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M20 21V19C20 17.9391 19.5786 16.9217 18.8284 16.1716C18.0783 15.4214 17.0609 15 16 15H8C6.93913 15 5.92172 15.4214 5.17157 16.1716C4.42143 16.9217 4 17.9391 4 19V21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <circle cx="12" cy="7" r="4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <div class="stat-card__number" data-count="{{ section.settings.stat_1_number }}">
          {% assign number_parts = section.settings.stat_1_number | split: '+' %}
          {{ number_parts[0] }}<span class="plus-sign" style="font-weight: 900; letter-spacing: 0;">{% if number_parts.size > 1 %}+{% endif %}</span>
        </div>
        <div class="stat-card__label">{{ section.settings.stat_1_label }}</div>
      </div>

      <div class="stat-card" data-animate="fade-up" data-delay="0.1">
        <div class="stat-card__icon">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M20 7H4L6 21H18L20 7Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M8 7V5C8 4.46957 8.21071 3.96086 8.58579 3.58579C8.96086 3.21071 9.46957 3 10 3H14C14.5304 3 15.0391 3.21071 15.4142 3.58579C15.7893 3.96086 16 4.46957 16 5V7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <div class="stat-card__number" data-count="{{ section.settings.stat_2_number }}">
          {% assign number_parts = section.settings.stat_2_number | split: '+' %}
          {{ number_parts[0] }}<span class="plus-sign" style="font-weight: 900; letter-spacing: 0;">{% if number_parts.size > 1 %}+{% endif %}</span>
        </div>
        <div class="stat-card__label">{{ section.settings.stat_2_label }}</div>
      </div>

      <div class="stat-card" data-animate="fade-up" data-delay="0.2">
        <div class="stat-card__icon">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M21 10C21 17 12 23 12 23C12 23 3 17 3 10C3 7.61305 3.94821 5.32387 5.63604 3.63604C7.32387 1.94821 9.61305 1 12 1C14.3869 1 16.6761 1.94821 18.364 3.63604C20.0518 5.32387 21 7.61305 21 10Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <circle cx="12" cy="10" r="3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <div class="stat-card__number" data-count="{{ section.settings.stat_3_number }}">
          {% assign number_parts = section.settings.stat_3_number | split: '+' %}
          {{ number_parts[0] }}<span class="plus-sign" style="font-weight: 900; letter-spacing: 0;">{% if number_parts.size > 1 %}+{% endif %}</span>
        </div>
        <div class="stat-card__label">{{ section.settings.stat_3_label }}</div>
      </div>

      <div class="stat-card" data-animate="fade-up" data-delay="0.3">
        <div class="stat-card__icon">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M12 6V12L16 14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <div class="stat-card__number" data-count="{{ section.settings.stat_4_number }}">
          {% assign number_parts = section.settings.stat_4_number | split: '+' %}
          {{ number_parts[0] }}<span class="plus-sign" style="font-weight: 900; letter-spacing: 0;">{% if number_parts.size > 1 %}+{% endif %}</span>
        </div>
        <div class="stat-card__label">{{ section.settings.stat_4_label }}</div>
      </div>
    </div>
  </div>
</section>
