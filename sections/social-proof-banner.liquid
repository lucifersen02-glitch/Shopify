{% schema %}
{
  "name": "Social Proof Banner",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Banner Text",
      "default": "JOIN 50,000+ HAPPY CUSTOMERS!"
    },
    {
      "type": "range",
      "id": "speed",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 5,
      "label": "Animation Speed"
    }
  ],
  "presets": [
    {
      "name": "Social Proof Banner"
    }
  ]
}
{% endschema %}

<div class="social-proof-banner">
  <div class="social-proof-banner__content" data-speed="{{ section.settings.speed }}">
    <span class="social-proof-banner__text">{{ section.settings.text }}</span>
    <span class="social-proof-banner__text">{{ section.settings.text }}</span>
    <span class="social-proof-banner__text">{{ section.settings.text }}</span>
    <span class="social-proof-banner__text">{{ section.settings.text }}</span>
    <span class="social-proof-banner__text">{{ section.settings.text }}</span>
  </div>
</div>
