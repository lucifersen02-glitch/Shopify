{% schema %}
{
  "name": "Hero Carousel",
  "settings": [
    {
      "type": "text",
      "id": "slide_1_heading",
      "label": "Slide 1 Heading",
      "default": "Welcome to PerfectFinds"
    },
    {
      "type": "textarea",
      "id": "slide_1_description",
      "label": "Slide 1 Description",
      "default": "Discover amazing products crafted with care and quality."
    },
    {
      "type": "text",
      "id": "slide_1_button_text",
      "label": "Slide 1 Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "slide_1_button_link",
      "label": "Slide 1 Button Link"
    },
    {
      "type": "image_picker",
      "id": "slide_1_image",
      "label": "Slide 1 Image"
    },
    {
      "type": "text",
      "id": "slide_2_heading",
      "label": "Slide 2 Heading",
      "default": "Premium Quality Products"
    },
    {
      "type": "textarea",
      "id": "slide_2_description",
      "label": "Slide 2 Description",
      "default": "Handpicked items that bring value to your everyday life."
    },
    {
      "type": "text",
      "id": "slide_2_button_text",
      "label": "Slide 2 Button Text",
      "default": "Explore Collection"
    },
    {
      "type": "url",
      "id": "slide_2_button_link",
      "label": "Slide 2 Button Link"
    },
    {
      "type": "image_picker",
      "id": "slide_2_image",
      "label": "Slide 2 Image"
    },
    {
      "type": "text",
      "id": "slide_3_heading",
      "label": "Slide 3 Heading",
      "default": "Special Offers & Deals"
    },
    {
      "type": "textarea",
      "id": "slide_3_description",
      "label": "Slide 3 Description",
      "default": "Limited time offers on selected items. Don't miss out!"
    },
    {
      "type": "text",
      "id": "slide_3_button_text",
      "label": "Slide 3 Button Text",
      "default": "View Deals"
    },
    {
      "type": "url",
      "id": "slide_3_button_link",
      "label": "Slide 3 Button Link"
    },
    {
      "type": "image_picker",
      "id": "slide_3_image",
      "label": "Slide 3 Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Carousel"
    }
  ]
}
{% endschema %}

<section class="hero-carousel">
  <div class="hero-carousel__container">
    <div class="hero-carousel__slides">
      <!-- Slide 1 -->
      <div class="hero-carousel__slide active">
        <div class="hero-carousel__background">
          {% if section.settings.slide_1_image %}
            {{ section.settings.slide_1_image | image_url: width: 1920 | image_tag: loading: 'eager', alt: section.settings.slide_1_heading, class: 'hero-carousel__image' }}
          {% else %}
            <div class="hero-carousel__placeholder"></div>
          {% endif %}
          <div class="hero-carousel__overlay"></div>
        </div>
        <div class="hero-carousel__content">
          <div class="hero-carousel__text">
            <h1 class="hero-carousel__heading" data-animate="fade-up">{{ section.settings.slide_1_heading }}</h1>
            <p class="hero-carousel__description" data-animate="fade-up" data-delay="0.2">{{ section.settings.slide_1_description }}</p>
            {% if section.settings.slide_1_button_link != blank %}
              <a href="{{ section.settings.slide_1_button_link }}" class="button button--primary hero-carousel__button" data-animate="fade-up" data-delay="0.4">
                {{ section.settings.slide_1_button_text }}
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            {% endif %}
          </div>
        </div>
      </div>

      <!-- Slide 2 -->
      <div class="hero-carousel__slide">
        <div class="hero-carousel__background">
          {% if section.settings.slide_2_image %}
            {{ section.settings.slide_2_image | image_url: width: 1920 | image_tag: loading: 'lazy', alt: section.settings.slide_2_heading, class: 'hero-carousel__image' }}
          {% else %}
            <div class="hero-carousel__placeholder"></div>
          {% endif %}
          <div class="hero-carousel__overlay"></div>
        </div>
        <div class="hero-carousel__content">
          <div class="hero-carousel__text">
            <h1 class="hero-carousel__heading" data-animate="fade-up">{{ section.settings.slide_2_heading }}</h1>
            <p class="hero-carousel__description" data-animate="fade-up" data-delay="0.2">{{ section.settings.slide_2_description }}</p>
            {% if section.settings.slide_2_button_link != blank %}
              <a href="{{ section.settings.slide_2_button_link }}" class="button button--primary hero-carousel__button" data-animate="fade-up" data-delay="0.4">
                {{ section.settings.slide_2_button_text }}
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            {% endif %}
          </div>
        </div>
      </div>

      <!-- Slide 3 -->
      <div class="hero-carousel__slide">
        <div class="hero-carousel__background">
          {% if section.settings.slide_3_image %}
            {{ section.settings.slide_3_image | image_url: width: 1920 | image_tag: loading: 'lazy', alt: section.settings.slide_3_heading, class: 'hero-carousel__image' }}
          {% else %}
            <div class="hero-carousel__placeholder"></div>
          {% endif %}
          <div class="hero-carousel__overlay"></div>
        </div>
        <div class="hero-carousel__content">
          <div class="hero-carousel__text">
            <h1 class="hero-carousel__heading" data-animate="fade-up">{{ section.settings.slide_3_heading }}</h1>
            <p class="hero-carousel__description" data-animate="fade-up" data-delay="0.2">{{ section.settings.slide_3_description }}</p>
            {% if section.settings.slide_3_button_link != blank %}
              <a href="{{ section.settings.slide_3_button_link }}" class="button button--primary hero-carousel__button" data-animate="fade-up" data-delay="0.4">
                {{ section.settings.slide_3_button_text }}
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>

    <!-- Carousel Controls -->
    <button class="hero-carousel__prev" aria-label="Previous slide">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>
    <button class="hero-carousel__next" aria-label="Next slide">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </button>

    <!-- Carousel Indicators -->
    <div class="hero-carousel__indicators">
      <button class="hero-carousel__indicator active" data-slide="0" aria-label="Go to slide 1"></button>
      <button class="hero-carousel__indicator" data-slide="1" aria-label="Go to slide 2"></button>
      <button class="hero-carousel__indicator" data-slide="2" aria-label="Go to slide 3"></button>
    </div>
  </div>
</section>
