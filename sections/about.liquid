{% schema %}
{
  "name": "About Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About Us"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>We are passionate about creating high-quality products that make a difference in your daily life. Our commitment to excellence and customer satisfaction drives everything we do.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "About Section"
    }
  ]
}
{% endschema %}

<section id="about" class="about">
  <div class="container">
    <div class="about__content">
      <div class="about__text">
        <h2 class="section-heading">{{ section.settings.heading }}</h2>
        <div class="about__description">
          {{ section.settings.content }}
        </div>
      </div>
      {% if section.settings.image %}
        <div class="about__image">
          {{ section.settings.image | image_url: width: 600 | image_tag: loading: 'lazy', alt: section.settings.heading }}
        </div>
      {% endif %}
    </div>
  </div>
</section>
