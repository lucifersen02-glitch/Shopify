{% schema %}
{
  "name": "Payment",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Payment Heading",
      "default": "Payment"
    },
    {
      "type": "text",
      "id": "order_confirmation_text",
      "label": "Order Confirmation Text",
      "default": "Order Confirmed"
    }
  ],
  "presets": [
    {
      "name": "Payment"
    }
  ]
}
{% endschema %}

<section class="payment-section">
  <div class="container">
    <div class="payment-wrapper">
      <div class="payment-success">
        <div class="payment-success__icon">
          <svg width="80" height="80" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/>
            <path d="M8 12L11 15L16 9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <h1 class="payment-success__title">{{ section.settings.order_confirmation_text | default: "Order Confirmed!" }}</h1>
        <p class="payment-success__message">Thank you for your purchase. Your order has been received and is being processed.</p>
        
        <div class="payment-success__details">
          <div class="payment-success__detail-item">
            <span class="payment-success__detail-label">Order Number:</span>
            <span class="payment-success__detail-value">#{{ "now" | date: "%Y%m%d%H%M%S" }}</span>
          </div>
          <div class="payment-success__detail-item">
            <span class="payment-success__detail-label">Order Date:</span>
            <span class="payment-success__detail-value">{{ "now" | date: "%B %d, %Y" }}</span>
          </div>
          <div class="payment-success__detail-item">
            <span class="payment-success__detail-label">Total Amount:</span>
            <span class="payment-success__detail-value">{{ cart.total_price | money }}</span>
          </div>
        </div>

        <div class="payment-success__actions">
          <a href="{{ routes.root_url }}" class="button button--primary">Continue Shopping</a>
          <a href="/pages/orders" class="button button--secondary">View Orders</a>
        </div>
      </div>

      <div class="payment-form-wrapper">
        <h2 class="payment-section__title">{{ section.settings.heading | default: "Payment Information" }}</h2>
        
        <form action="/pages/payment" method="post" id="payment-form" class="payment-form">
          <div class="payment-form__section">
            <h3 class="payment-form__section-title">Payment Method</h3>
            
            <div class="payment-methods">
              <label class="payment-method">
                <input type="radio" name="payment_method" value="card" checked class="payment-method__input">
                <div class="payment-method__content">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect x="2" y="5" width="20" height="14" rx="2" stroke="currentColor" stroke-width="2"/>
                    <path d="M2 10H22" stroke="currentColor" stroke-width="2"/>
                  </svg>
                  <span>Credit/Debit Card</span>
                </div>
              </label>

              <label class="payment-method">
                <input type="radio" name="payment_method" value="paypal" class="payment-method__input">
                <div class="payment-method__content">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M7 8C7 6.89543 7.89543 6 9 6H15C16.1046 6 17 6.89543 17 8V16C17 17.1046 16.1046 18 15 18H9C7.89543 18 7 17.1046 7 16V8Z" stroke="currentColor" stroke-width="2"/>
                    <path d="M7 12H17" stroke="currentColor" stroke-width="2"/>
                  </svg>
                  <span>PayPal</span>
                </div>
              </label>

              <label class="payment-method">
                <input type="radio" name="payment_method" value="bank" class="payment-method__input">
                <div class="payment-method__content">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect x="2" y="4" width="20" height="16" rx="2" stroke="currentColor" stroke-width="2"/>
                    <path d="M2 10H22" stroke="currentColor" stroke-width="2"/>
                    <path d="M7 14H17" stroke="currentColor" stroke-width="2"/>
                  </svg>
                  <span>Bank Transfer</span>
                </div>
              </label>
            </div>
          </div>

          <div class="payment-form__section" id="card-details">
            <h3 class="payment-form__section-title">Card Details</h3>
            
            <div class="form-group">
              <label for="card-number" class="form-label">Card Number *</label>
              <input type="text" id="card-number" name="card[number]" class="form-input" placeholder="1234 5678 9012 3456" maxlength="19" required>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="card-expiry" class="form-label">Expiry Date *</label>
                <input type="text" id="card-expiry" name="card[expiry]" class="form-input" placeholder="MM/YY" maxlength="5" required>
              </div>

              <div class="form-group">
                <label for="card-cvv" class="form-label">CVV *</label>
                <input type="text" id="card-cvv" name="card[cvv]" class="form-input" placeholder="123" maxlength="4" required>
              </div>
            </div>

            <div class="form-group">
              <label for="card-name" class="form-label">Cardholder Name *</label>
              <input type="text" id="card-name" name="card[name]" class="form-input" required>
            </div>
          </div>

          <div class="payment-form__actions">
            <a href="/pages/checkout" class="button button--secondary">Back</a>
            <button type="submit" class="button button--primary" id="submit-payment">
              Complete Order
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
