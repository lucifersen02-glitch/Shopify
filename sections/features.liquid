{% schema %}
{
  "name": "Features Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Shop With Us"
    },
    {
      "type": "text",
      "id": "feature_1_title",
      "label": "Feature 1 Title",
      "default": "Free Shipping"
    },
    {
      "type": "textarea",
      "id": "feature_1_description",
      "label": "Feature 1 Description",
      "default": "Free shipping on orders over $50"
    },
    {
      "type": "text",
      "id": "feature_2_title",
      "label": "Feature 2 Title",
      "default": "Secure Payment"
    },
    {
      "type": "textarea",
      "id": "feature_2_description",
      "label": "Feature 2 Description",
      "default": "100% secure payment processing"
    },
    {
      "type": "text",
      "id": "feature_3_title",
      "label": "Feature 3 Title",
      "default": "Easy Returns"
    },
    {
      "type": "textarea",
      "id": "feature_3_description",
      "label": "Feature 3 Description",
      "default": "30-day hassle-free returns"
    },
    {
      "type": "text",
      "id": "feature_4_title",
      "label": "Feature 4 Title",
      "default": "Quality Guaranteed"
    },
    {
      "type": "textarea",
      "id": "feature_4_description",
      "label": "Feature 4 Description",
      "default": "Premium quality products only"
    }
  ],
  "presets": [
    {
      "name": "Features Section"
    }
  ]
}
{% endschema %}

<section class="features-section">
  <div class="container">
    <h2 class="section-heading">{{ section.settings.heading }}</h2>
    <div class="features-grid">
      <div class="feature-card" data-animate="fade-up">
        <div class="feature-card__icon">
          <svg width="56" height="56" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M16 3H8C6.89543 3 6 3.89543 6 5V19C6 20.1046 6.89543 21 8 21H16C17.1046 21 18 20.1046 18 19V5C18 3.89543 17.1046 3 16 3Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M6 9H18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M12 3V9" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <h3 class="feature-card__title">{{ section.settings.feature_1_title }}</h3>
        <p class="feature-card__description">{{ section.settings.feature_1_description }}</p>
      </div>

      <div class="feature-card" data-animate="fade-up" data-delay="0.1">
        <div class="feature-card__icon">
          <svg width="56" height="56" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M12 6V12L16 14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <h3 class="feature-card__title">{{ section.settings.feature_2_title }}</h3>
        <p class="feature-card__description">{{ section.settings.feature_2_description }}</p>
      </div>

      <div class="feature-card" data-animate="fade-up" data-delay="0.2">
        <div class="feature-card__icon">
          <svg width="56" height="56" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 11L12 14L22 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M21 12V19C21 19.5304 20.7893 20.0391 20.4142 20.4142C20.0391 20.7893 19.5304 21 19 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V5C3 4.46957 3.21071 3.96086 3.58579 3.58579C3.96086 3.21071 4.46957 3 5 3H16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <h3 class="feature-card__title">{{ section.settings.feature_3_title }}</h3>
        <p class="feature-card__description">{{ section.settings.feature_3_description }}</p>
      </div>

      <div class="feature-card" data-animate="fade-up" data-delay="0.3">
        <div class="feature-card__icon">
          <svg width="56" height="56" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <h3 class="feature-card__title">{{ section.settings.feature_4_title }}</h3>
        <p class="feature-card__description">{{ section.settings.feature_4_description }}</p>
      </div>
    </div>
  </div>
</section>
